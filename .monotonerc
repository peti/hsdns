-- .monotonerc for HsDNS

function ignore_file(name)
  if (name == ".depend") then return true end
  if (name == ".depend.bak") then return true end
  if (name == ".installed-pkg-config") then return true end
  if (name == ".setup-config") then return true end
  if (name == "Network/DNS/ADNS.hs") then return true end
  if (name == "System/Posix/GetTimeOfDay.hs") then return true end
  if (name == "System/Posix/Poll.hs") then return true end
  if (name == "hsdns.haddock") then return true end
  if (name == "index.html") then return true end
  if (name == "package.conf.inplace") then return true end
  if (name == "package.conf.installed") then return true end
  if (name == "test") then return true end
  if (name == "test.hi") then return true end
  if (name == "test.o") then return true end
  if (string.find(name, "%.raw%-hs$")) then return true end
  if (string.find(name, "^_darcs/")) then return true end
  if (string.find(name, "^dist/")) then return true end
  if (string.find(name, "^hsdns%-.*%.tar%.gz")) then return true end
  if (string.find(name, "^html/")) then return true end
  if (string.find(name, "_hsc%.c$")) then return true end
  if (string.find(name, "_split/")) then return true end

  return false
end
